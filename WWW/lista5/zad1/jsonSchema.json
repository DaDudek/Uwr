{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dane",
  "properties": {
    "accountNumber": {
      "description": "The person's bank account number.",
      "type": "number",
      "pattern": "\\d{26}"
    },
    "pesel": {
      "description": "The person's PESEL.",
      "type": "string",
      "pattern": "\\d{11}"
    },
    "birthDate": {
      "description": "Date of birth (DD-MM-YYYY)",
      "type": "string",
      "pattern": "^(1[8-9]\\d{2}|20[0-1]\\d|2020)-(1[0-2]|0[0-9])-([0-2]\\d|3[0-1])$"
    },
    "email": {
      "description": "The person's e-mail",
      "type": "string",
      "pattern": ".+@.+\\..+"
    }
  }
}
